{
  "name": "@erebos/cli",
  "version": "0.8.0",
  "description": "Ethereum and Swarm command-line interface",
  "repository": "git@github.com:MainframeHQ/erebos.git",
  "main": "lib/index.js",
  "author": "Mainframe",
  "license": "MIT",
  "bin": {
    "erebos": "./bin/run"
  },
  "files": [
    "bin/*",
    "lib/*",
    "oclif.manifest.json"
  ],
  "oclif": {
    "commands": "./lib/commands",
    "bin": "erebos",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "scripts": {
    "clean": "del lib",
    "test:types": "tsc --noEmit",
    "build:js": "BABEL_ENV=node babel src --out-dir lib --extensions \".ts\"",
    "build": "yarn test:types && yarn clean && yarn build:js",
    "prepublishOnly": "yarn build && oclif-dev manifest",
    "postpublish": "del-cli oclif.manifest.json"
  },
  "dependencies": {
    "@babel/runtime": "^7.5.4",
    "@erebos/api-bzz-node": "^0.9.0",
    "@erebos/api-pss": "^0.9.0",
    "@erebos/hex": "^0.9.0",
    "@erebos/keccak256": "^0.9.0",
    "@erebos/secp256k1": "^0.9.0",
    "@erebos/swarm-node": "^0.9.0",
    "@erebos/timeline": "^0.9.0",
    "@oclif/command": "^1.5.16",
    "@oclif/config": "^1.13.1",
    "@oclif/plugin-help": "^2.2.0",
    "fs-extra": "^8.0.1",
    "ora": "^3.4.0"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.22.0",
    "del-cli": "^2.0.0",
    "typescript": "3.5.2"
  }
}
