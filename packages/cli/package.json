{
  "name": "@erebos/cli",
  "version": "0.3.0",
  "description": "Ethereum and Swarm command-line interface",
  "repository": "git@github.com:MainframeHQ/erebos.git",
  "main": "lib/index.js",
  "author": "Mainframe",
  "license": "MIT",
  "bin": {
    "erebos": "./bin/run"
  },
  "files": [
    "bin/*",
    "lib/*"
  ],
  "oclif": {
    "commands": "./lib/commands",
    "bin": "erebos",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "scripts": {
    "clean": "del lib",
    "build:js": "BABEL_ENV=node babel src --out-dir lib",
    "build": "yarn clean && yarn build:js",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "@babel/runtime": "^7.0.0",
    "@erebos/swarm-node": "^0.3.0",
    "@oclif/command": "^1.5.0",
    "@oclif/config": "^1.7.3",
    "@oclif/plugin-help": "^2.1.0",
    "fs-extra": "^7.0.0",
    "ora": "^3.0.0"
  }
}
