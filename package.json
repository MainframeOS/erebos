{
  "name": "erebos-monorepo",
  "version": "0.3.0",
  "description": "Ethereum and Swarm client",
  "repository": "git@github.com:MainframeHQ/erebos.git",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "lint": "eslint packages/*/src __tests__",
    "lint:fix": "yarn lint --fix",
    "test:flow": "flow check",
    "test:project": "jest --config jest.config.js",
    "test:ci": "jest --ci --config jest.config.ci.js --runInBand",
    "test:packages": "lerna run test",
    "test": "yarn test:flow && yarn test:packages && yarn test:project",
    "test:all": "yarn lint && yarn test",
    "build": "lerna run build",
    "start": "yarn test && yarn build"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.5",
    "babel-jest": "^23.2.0",
    "babel-plugin-syntax-class-properties": "^6.13.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-flow": "^6.23.0",
    "del-cli": "^1.1.0",
    "eslint": "^5.1.0",
    "eslint-config-mainframe": "^1.4.0",
    "flow-bin": "^0.77.0",
    "flow-copy-source": "^2.0.1",
    "form-data": "^2.3.2",
    "jest": "^23.3.0",
    "jest-fetch-mock": "^1.6.5",
    "jest-junit": "^5.1.0",
    "lerna": "^2.10.2",
    "prettier": "^1.13.7",
    "tar-stream": "^1.6.1"
  }
}
